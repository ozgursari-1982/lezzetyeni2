# Restoran Rezervasyon Sistemi - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# Güvenlik Anahtarı (Prod için güçlü bir anahtar oluşturun)
SECRET_KEY=your-secret-key-here

# Veritabanı URL'i
DATABASE_URL=sqlite:///instance/restaurant.sqlite

# Uygulama Modu (development, production, testing)
FLASK_ENV=development

# Email Konfigürasyonu (opsiyonel)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Konfigürasyonu (opsiyonel)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Rezervasyon Ayarları
DEFAULT_RESERVATION_DURATION=120  # dakika cinsinden
MAX_PARTY_SIZE=12
ADVANCE_BOOKING_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300  # saniye cinsinden

# Log Level
LOG_LEVEL=INFO